<Window x:Class="loork_gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:loork_gui"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
  <Grid UseLayoutRounding="True">
    <Image Source="{Binding SurfaceVM.Image}" Stretch="None" />
    <Slider HorizontalAlignment="Right" VerticalAlignment="Stretch" Margin="10" Orientation="Vertical"
            Minimum="0" Maximum="100" SmallChange="1" LargeChange="10" Value="{Binding TriggerPercent}" />
  </Grid>
</Window>
